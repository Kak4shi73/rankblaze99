{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "zeroConfig": true,
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    { "source": "/terms", "destination": "/index.html" },
    { "source": "/policy", "destination": "/index.html" },
    { "source": "/privacy", "destination": "/index.html" },
    { "source": "/refund", "destination": "/index.html" },
    { "source": "/about", "destination": "/index.html" },
    { "source": "/tools", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "github": {
    "silent": false,
    "autoAlias": true
  },
  "buildCommand": "npm run build",
  "cleanUrls": true,
  "public": true,
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}